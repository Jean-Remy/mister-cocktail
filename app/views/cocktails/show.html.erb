<%= render "banner", cocktail: @cocktail.name %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2 class="text-center"> Recipe </h2>
      <ul class="list-group text-center">
        <% @cocktail.doses.each do |dose|%>
          <li>
            <%= dose.description %> <%= dose.ingredient.name %> |
            <%= link_to cocktail_dose_path(@cocktail, dose), :method => :delete do %>
              <i class="fa fa-trash-o"></i>
            <%end%>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <hr>
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <h2> Add a dose for the <%= @cocktail.name %></h2>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :ingredient_id, label: "Which ingredient?", collection: @ingredients %>
      <%= f.input :description %>
      <%= f.button :submit, class: "btn-primary"%>
    <% end %>
  </div>
</div>





