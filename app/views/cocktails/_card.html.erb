<div class="card">
      <span class="card-bg" style="background-image:url(<%= cocktail.picture.url(:thumb) %>)"></span>
      <span class="card-shadow"></span>
      <span class="card-text">
        <h2><%= cocktail.name %></h2>
        <p>Nice & Smooth</p>
      </span>
      <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
</div>



