<div class="card">
      <span class="card-bg" style="background-image:url(<%= cocktail.picture %>)"></span>
      <span class="card-shadow"></span>
      <span class="card-description">Popular</span>
      <span class="card-text">
        <h2><%= cocktail.name %></h2>
        <p>Nice & Smooth</p>
      </span>
      <span class="card-user">
        <img src='https://raw.githubusercontent.com/lewagon/design/master/pick-it/pictures/students/charlotte_cady.jpg' class="avatar avatar-bordered"/>
      </span>
      <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
</div>



